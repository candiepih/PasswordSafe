{
  "manifest_version": 3,
  "name": "PasswordSafe",
  "version": "1.0",
  "description": "Password Safe is a password manager for Web browser.",
  "author": "Alex Steve",
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_title": "Password Safe",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": ["js/content.js"],
    "css": ["css/content.css"],
    "run_at": "document_end"
  }],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": [
      "modal.html",
      "css/content.css"
    ],
    "matches": ["https://*/*"]
  }],
  "host_permissions": ["https://*/*"],
  "permissions": [
    "tabs",
    "storage"
  ]
}
